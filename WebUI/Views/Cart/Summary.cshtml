@model Domain.Entities.Cart


<div class="navbar-text float-right text-white m-1">
    <b>Ваша корзина</b>
    @Model.Lines.Sum(x=> x.Quantity) книг,
    @Model.ComputeTotalValue().ToString("#.## руб")
</div>

<div class="float-right float-md-right">
    @Html.ActionLink("Заказать","Index","Cart",
            new { returnUrl = Request.Url.PathAndQuery },
            new { @class = "btn btn-light m-1" })
</div>