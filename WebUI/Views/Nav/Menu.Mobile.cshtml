@model IEnumerable<string>

<div data-role="navbar" class="navbar-nav">
    
    <ul>
        @foreach (var link in Model)
        {
            <li class="display-1">
                @Html.RouteLink(link, new
            {
                controller = "Books",
                action = "List",
                genre = link,
                page = 1
            }, new
            {
                data_transition = "fade",
                @class = (link == ViewBag.SelectedGenre ? "ui-btn-active" : null)

            })
            </li>
        }

    </ul>
</div>
