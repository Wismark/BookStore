@model Domain.Entities.Book

<div data-role="collapsible" class="card-group" data-collapsed="false" data-content-theme="c">
    <h2>@Model.Name</h2>
    <h3>@Model.Author</h3>

    <div >     
        <div>
            @Model.Description
        </div>
        <h3>
        <strong> @Model.Price.ToString("#.## руб") </strong>
        </h3>
        <div>
            @using (@Html.BeginForm("AddToCart", "Cart"))
            {
                    @Html.HiddenFor(x => x.BookId)
                    @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
                    <input type="submit" class="btn btn-success" value="Добавить в корзину" />
            }
        </div>
    </div>
</div>