@model IEnumerable<Domain.Entities.Book>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card mt-xl-auto">
    <div class="card-header">
        Список книг
    </div>

    <div class="card-body">
        <table class="table table-striped table-bordered">
            <tr>
                <th class="text-right">
                    @Html.DisplayNameFor(model => model.BookId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Author)
                </th>
                <th class="text-right">
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th class="text-center">
                    Действие
                </th>
            </tr>

            @foreach (var item in Model)
            {
            <tr>
                <td class="text-right">
                    @item.BookId 
                </td>
                <td>
                    @Html.ActionLink(item.Name, "Edit", new { item.BookId } )
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>            
                <td class="text-right">
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td class="text-center">
                     @using (Html.BeginForm("Delete", "Admin"))
                     {
                         @Html.Hidden("BookId", item.BookId)
                         <input type="submit" class="btn btn-primary " value="Удалить"/>
                     }
                </td>
            </tr>
            }

        </table>
    </div>

    <div class="card-footer">
        @Html.ActionLink("Добавить", "Create", null, new { @class = "btn btn-primary" })
    </div>
</div>